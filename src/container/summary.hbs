{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    {{#with main}}
    <main>
        <section>
            {{#if big}}
            <h2>{{> title data = summary.title}}</h2>
            {{else}}
            <h3>{{> title data = summary.title}}</h3>
            {{/if}}
            <div>
                <p>
                    {{summary.text}}
                </p>
            </div>
        </section>

        {{#with experience}}
        <section>
            {{#if big}}
            <h2>{{>title data=title}}</h2>
            {{else}}
            <h3>{{>title data=title}}</h3>
            {{/if}}

            <div>
                <p>
                    {{{text}}}
                </p>
            </div>
        </section>
        {{/with }}

    </main>
    {{/with}}

</div>

