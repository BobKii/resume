{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>


  <main>


    <section>
      {{#with page_header}}
      <div class="text-center">
        <h1>{{title}}</h1>
      </div>
      <div class="text-lowercase text-center"> {{description}} </div>
      {{/with}}
    </section>

    {{!-- // ======================= section ============== --}}
    {{#with section}}
    <section>
      <div class='card'>
        <div class='card-body'>
          <div>
            {{#with about_us}}
            {{#with title_list}}
            <div class="display-6 text-end">
              {{main}}
            </div>
            <br>
            <div class='text-end'>
              <h2>{{sub}}</h2>
            </div>
            {{/with}}
            <br>
            {{#with button}}
            <button class="btn btn-outline-info">{{text}} </button>
            <br>
            {{/with }}
            {{/with}}
            <br>
          </div>
        </div>
      </div>
      <br>

      {{!-- // ======================= advantage ============== --}}
      <div class='card'>
        <div class='card-body'>

          {{#with advantage}}
          <div class="display-5">
            <h1>{{title}}</h1>
          </div>
          <div class='card'>
            <div class='card-body'>
              {{#with efficiency}}
              <div class="display-4">{{title}} </div>
              <div>
                <h6>{{sub_title}}</h6>
              </div>
              <div>
                <p>{{description}}</p>
              </div>
              <button class="btn btn-outline-warning">{{button}} </button>
              {{/with}}
            </div>
          </div>

          <br>

          {{!-- // ======================= innovation ============== --}}
          <div class='card'>
            <div class='card-body'>
              {{#with innovation}}
              <div class="text-center display-4">
                {{title}}
              </div>

              <div class="text-center">
                <h6>{{sub_title}}</h6>
              </div>
              <div class="text-center">{{description}} </div>
              <br>
              <button class="btn btn-outline-warning">{{button}} </button>
              {{/with}}
            </div>
          </div>
          <br>
          {{!-- // ======================= collaboration ============== --}}
          <div class='card'>
            <div class='card-body'>
              {{#with collaboration}}
              <div class="text-end display-4">
                {{title}}
              </div>

              <div class="text-end">
                <h6>{{sub_title}}</h6>
              </div>
              <div class="text-end">
                <p>{{description}}</p>
              </div>
              <button class="btn btn-outline-warning">{{button}} </button>
              {{/with}}
              {{/with}}
            </div>
          </div>
        </div>
      </div>

      <br>
      {{!-- // ======================= agreement ============== --}}

      <div class='card'>
        <div class='card-body'>
          {{#with agreement}}
          <div class="display-5">
            {{title}}
          </div>
          <div class='card'>
            <div class='card-body'>
              {{#with info}}
              <div>
                <h5>{{title}}</h5>
              </div>
              <div>
                <p>{{sub_title}}</p>
              </div>

              <div class='card'>
                <div class='card-body'>
                  {{#with detail}}
                  <div>{{text}} </div>
                  <br>
                  <button class="btn btn-success">{{button}} </button>
                  {{/with}}
                  {{/with}}

                  {{/with}}

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


    </section>
    {{/with}}
  </main>
  {{!-- {{/with}} --}}

</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}