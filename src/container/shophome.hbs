        </div>
      </div>

      <br>

      {{!-- // ======================= innovation ============== --}}
      <div class='card'>
        <div class='card-body'>
          {{#with innovation}}
          <div class="text-center display-4">
            {{title}}
          </div>

          <div class="text-center">
            <h6>{{sub_title}}</h6>
          </div>
          <div class="text-center">{{description}} </div>
          <br>
          <button class="btn btn-outline-warning">{{button}} </button>
          {{/with}}
        </div>
      </div>
      <br>
      {{!-- // ======================= collaboration ============== --}}
      <div class='card'>
        <div class='card-body'>
          {{#with collaboration}}
          <div class="text-end display-4">
            {{title}}
          </div>

          <div class="text-end">
            <h6>{{sub_title}}</h6>
          </div>
          <div class="text-end">
            <p>{{description}}</p>
          </div>
          <button class="btn btn-outline-warning">{{button}} </button>
          {{/with}}
          {{/with}}
        </div>
      </div>
    </div>
  </div>

  <br>
  {{!-- // ======================= agreement ============== --}}

  <div class='card'>
    <div class='card-body'>
      {{#with agreement}}
      <div class="display-5">
        {{title}}
      </div>
      <div class='card'>
        <div class='card-body'>
          {{#with info}}
          <div>
            <h5>{{title}}</h5>
          </div>
          <div>
            <p>{{sub_title}}</p>
          </div>

          <div class='card'>
            <div class='card-body'>
              {{#with detail}}
              <div>{{text}} </div>
              <br>
              <button class="btn btn-success">{{button}} </button>
              {{/with}}
              {{/with}}

              {{/with}}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


</section>
{{/with}}
</main>
{{!-- {{/with}} --}}

</div>

