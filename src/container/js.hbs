{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}



<div>


  <main>

    {{> title data = 'JavaScript' big=true}}


    <section>
      <div> <strong>{{description}}</strong> </div>

      {{#with history }}
      <div><em>{{founder}} {{year}}</em> </div>
      {{/with}}

      <hr>
    </section>

    {{!-- ========== types ============= --}}
    <section>
      <ul>
        <div class="text-primary">
          <b>Type Data</b>
        </div>
        <br>

        {{#each types }}
        <li> {{this}} </li>
        {{/each}}
      </ul>

      <hr>
    </section>

    {{!-- ========== syntax ============= --}}
    <section>
      <ul>
        <div class="text-primary">
          <b> Syntax</b>
        </div>
        {{#with syntax }}
        <ul>
          <b>Variables:</b>
          {{#each variables }}
          <li> {{this}} </li>
          {{/each}}
        </ul>
        <br>
        {{!-- {{>my_ul TitleSpisok = "Functions:" nameSpisok = syntax.functions}} --}}

        <ul>
          <b>Functions:</b>
          {{#each functions }}
          <li> {{this}} </li>
          {{/each}}
        </ul>
        <br>

        <ul>
          <b>Conditionals:</b>
          {{#each conditionals }}
          <li> {{this}} </li>
          {{/each}}
        </ul>
        <br>

        <ul>
          <b>Loops:</b>
          {{#each loops }}
          <li> {{this}} </li>
          {{/each}}
        </ul>
        <br>

        <ul>
          <b>Classes:</b>
          {{#each classes }}
          <li> {{this}} </li>
          {{/each}}
        </ul>
        <br>

        <hr>

        {{/with}}
      </ul>
    </section>


    {{!-- ========== features ============= --}}
    <section>

      {{!-- {{>my_ul TitleSpisok = "Functions:" nameSpisok = syntax.functions}} --}}

      <ul>
        <div class="text-success">
          <b>Features:</b>
        </div>
        {{#each features }}
        <li> {{this}} </li>
        {{/each}}
      </ul>

      <hr>
    </section>

    {{!-- ========== libraries ============= --}}
    <section>

      {{!-- {{>my_ul TitleSpisok = "Functions:" nameSpisok = syntax.functions}} --}}

      <ul>
        <div class="text-success">
          <b> Libraries: </b>
        </div>
        {{#each libraries }}
        <li> {{this}} </li>
        {{/each}}
      </ul>

      <hr>

    </section>

    {{!-- ========== tools ============= --}}
    <section>

      {{!-- {{>my_ul TitleSpisok = "Functions:" nameSpisok = syntax.functions}} --}}

      <ul>
        <div class="text-success">
          <b> Tools: </b>
        </div>
        {{#each tools }}
        <li> {{this}} </li>
        {{/each}}
      </ul>

      <hr>

    </section>



    {{!-- ========== community ============= --}}
    <section>

      {{!-- {{>my_ul TitleSpisok = "Functions:" nameSpisok = syntax.functions}} --}}

      <ul>
        <div class="text-danger">
          <b> Community:</b>
        </div>
        {{#each community }}
        <li> Name: {{name}} Type: {{type}} </li>
        {{/each}}
      </ul>

      <hr>

    </section>

  </main>


</div>
